@model IEnumerable<MusicAssistantMvcCore.Models.ArtistModel>

@{
    ViewData["Title"] = "Subscriptions";
}

<h2>Index</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card my-3">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <div class="image">
                        <img src="@Url.Content(item.ArtistPhotoUrl)" style="height:250px;width:250px;"
                             alt="Album Cover" class="img-thumbnail">
                    </div>
                </a>
                <div class="card-footer">
                    <h6 class="card-title text-center">
                        <a class="lead" asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </h6>
                </div>
            </div>
        </div>
    }
</div>
