@model IEnumerable<MusicAssistantMvcCore.Models.ArtistModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card my-3">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <div class="image">
                        <img src="@Url.Content(item.ArtistPhotoUrl)" style="height:250px;width:250px;"
                             alt="Album Cover" class="img-thumbnail">
                    </div>
                </a>
                <div class="card-footer">
                    <h6 class="card-title text-center">
                        <a class="lead" asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Pseudonym)
                        </a>
                    </h6>
                    <div class="card-footer">
                        <div class="d-flex flex-row text-center justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

